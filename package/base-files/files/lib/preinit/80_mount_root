do_mount_root() {
	mount_root
	boot_run_hook preinit_mount_root

	[ -f /sysupgrade.tgz ] && config_restore /sysupgrade.tgz xzf
	[ -f /tmp/sysupgrade.tar ] && config_restore /tmp/sysupgrade.tar xf
}

[ "$INITRAMFS" = "1" ] || boot_hook_add preinit_main do_mount_root
