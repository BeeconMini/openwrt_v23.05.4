#!/bin/sh
#
# Copyright (C) 2012 OpenWrt.org
#

. /lib/uboot-envtools.sh
. /lib/functions.sh

idx="$(find_mtd_index u-boot-env)"

[ -n "$idx" ] || exit 0

[ -e /etc/config/ubootenv -a "$(uci get ubootenv.@ubootenv[-1].dev)" = "/dev/mtd$idx" ] && exit 0

rm -f /etc/config/ubootenv
rm -f /etc/fw_env.config

touch /etc/config/ubootenv

board=$(board_name)

case "$board" in
bt,homehub-v2b|\
siemens,gigaset-sx76x)
	ubootenv_add_uci_config "/dev/mtd$idx" "0x0" "0x10000" "0x10000" "1"
	;;
bt,homehub-v3a)
	ubootenv_add_uci_config "/dev/mtd$idx" "0x0" "0x4000" "0x4000" "1"
	;;
buffalo,wbmr-300hpd)
	ubootenv_add_uci_config "/dev/mtd$idx" "0x0" "0x2000" "0x1000" "2"
	;;
zyxel,p-2812hnu-f1)
	ubootenv_add_uci_config "/dev/mtd$idx" "0x0" "0x2000" "0x20000" "1"
	;;
esac

config_load ubootenv
config_foreach ubootenv_add_app_config ubootenv

exit 0
