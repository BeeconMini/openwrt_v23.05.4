menu "Realtek SoC drivers"

config REALTEK_SOC
	bool
	depends on ARCH_REALTEK
	default y
	help
	  Realtek SoC drivers.

	  If unsure, say N.

config REALTEK_RBUS_BARRIER
	bool "Realtek rbus barrier"
	default ARCH_REALTEK
	default n
	help
	  Enable helper functions for R-bus barrier. If unsure, say N.

source "drivers/soc/realtek/common/Kconfig"

endmenu
