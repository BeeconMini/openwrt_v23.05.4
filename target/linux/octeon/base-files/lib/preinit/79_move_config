octeon_move_config() {
	. /lib/upgrade/common.sh
	local device="$1"
	[ -n "$device" ] && [ -b "$device" ] && {
		mount -t vfat "$device" /mnt
		[ -f "/mnt/$BACKUP_FILE" ] && mv -f "/mnt/$BACKUP_FILE" /
		umount /mnt
	}
}

move_config() {
	. /lib/functions.sh
	case "$(board_name)" in
		erlite)
			octeon_move_config "/dev/sda1"
			;;
		itus,shield-router)
			octeon_move_config "/dev/mmcblk1p1"
			;;
	esac
}

boot_hook_add preinit_mount_root move_config
