
config dnsmasq
	option domainneeded '1'
	option localise_queries '1'
	option expandhosts '1'
	option authoritative '1'
	option readethers '1'
	option leasefile '/tmp/dhcp.leases'
	option resolvfile '/tmp/resolv.conf.d/resolv.conf.auto'
	option localservice '1'
	option ednspacket_max '1232'
	option confdir '/tmp/dnsmasq.d'
	option logqueries '1'
	option local '/lan/'
	option rebind_protection '0'
	option domain 'lan'
	list server '10.0.0.2'
	list bogusnxdomain '10.0.0.2'
	option boguspriv '0'

config dhcp 'lan'
	option interface 'lan'
	option start '100'
	option limit '150'
	option leasetime '12h'
	option dhcpv4 'server'
	option dhcpv6 'server'
	option ra 'server'
	option ra_slaac '1'
	list ra_flags 'managed-config'
	list ra_flags 'other-config'

config dhcp 'wan'
	option interface 'wan'
	option ignore '1'

config odhcpd 'odhcpd'
	option maindhcp '0'
	option leasefile '/tmp/hosts/odhcpd'
	option leasetrigger '/usr/sbin/odhcpd-update'
	option loglevel '4'

config dhcp 'LAN'
	option interface 'LAN'
	option limit '150'
	option leasetime '12h'
	option start '50'
	option ra 'server'
	list dns '2600:1700:cbc0:77a8::2'
	list dhcp_option '6,10.0.0.2,10.0.0.1'
	list ra_flags 'none'

config dhcp 'VIDEO'
	option interface 'VIDEO'
	option start '100'
	option limit '150'
	option leasetime '12h'
	list ra_flags 'none'

config dhcp 'IoT'
	option interface 'IoT'
	option start '100'
	option limit '150'
	option leasetime '12h'
	list dhcp_option ' 6,10.0.0.2'
	option ra 'server'
	list ra_flags 'none'
	list dns '2600:1700:cbc0:77a8::2'

config host
	option ip '10.0.4.198'
	option mac '24:E8:53:E8:39:5E'

