
config globals 'globals'
	option mmx_mask '0x3F00'

config policy 'wan_only'
	list use_member 'wan1'
	list use_member 'wan1v6'
	option last_resort 'default'

config policy 'wanb_only'
	list use_member 'wan2'
	list use_member 'wan2v6'
	option last_resort 'default'

config policy 'balanced'
	list use_member 'wan1'
	list use_member 'wan2'
	list use_member 'wan1v6'
	list use_member 'wan2v6'
	option last_resort 'default'

config policy 'wan_wanb'
	list use_member 'wan1'
	list use_member 'wan2'
	option last_resort 'unreachable'

config policy 'wanb_wan'
	list use_member 'wan1'
	list use_member 'wan2'
	option last_resort 'unreachable'

config rule 'https'
	option sticky '1'
	option dest_port '443'
	option proto 'tcp'
	option use_policy 'balanced'

config rule 'default_rule_v4'
	option dest_ip '0.0.0.0/0'
	option use_policy 'balanced'
	option family 'ipv4'

config rule 'default_rule_v6'
	option dest_ip '::/0'
	option use_policy 'balanced'
	option family 'ipv6'

config interface 'WAN1'
	option enabled '1'
	option initial_state 'online'
	option family 'ipv4'
	list track_ip '8.8.8.8'
	list track_ip '1.1.1.1'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option max_ttl '60'
	option failure_interval '5'
	option recovery_interval '5'
	option up '5'
	option down '3'
	option timeout '3'
	option interval '3'

config interface 'WAN1v6'
	option enabled '1'
	option initial_state 'online'
	option family 'ipv6'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option max_ttl '60'
	option check_quality '0'
	option timeout '4'
	option interval '10'
	option failure_interval '5'
	option recovery_interval '5'
	option down '5'
	option up '5'
	list track_ip '2001:4860:4860::8888'

config interface 'WAN2'
	option enabled '1'
	option initial_state 'online'
	option family 'ipv4'
	list track_ip '8.8.8.8'
	list track_ip '1.1.1.1'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option max_ttl '60'
	option failure_interval '5'
	option recovery_interval '5'
	option up '5'
	option down '3'
	option timeout '3'
	option interval '3'

config interface 'WAN2v6'
	option enabled '1'
	option initial_state 'online'
	option family 'ipv6'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option max_ttl '60'
	option check_quality '0'
	option timeout '4'
	option interval '10'
	option failure_interval '5'
	option recovery_interval '5'
	option down '5'
	option up '5'

config member 'wan1'
	option interface 'WAN1'
	option metric '1'
	option weight '1'

config member 'wan2'
	option interface 'WAN2'
	option weight '100'

config member 'wan1v6'
	option interface 'WAN1v6'
	option metric '2'

config member 'wan2v6'
	option interface 'WAN2v6'
	option metric '2'

config rule 'starlink_local'
	option dest_ip '192.168.100.1'
	option proto 'all'
	option sticky '0'
	option use_policy 'wanb_only'

